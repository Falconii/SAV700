<?xml version="1.0" encoding="utf-8"?>
 <selector
 	xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item 
        android:state_pressed="true">
	    
	    <shape 
	        android:shape="rectangle">
	        
	        <solid android:color="#C7A626" />
        	<stroke 
        	    android:width="2dp" 
        	    android:color="#C7A626" />
        	<corners 
        	    android:topLeftRadius="8dp"
	            android:topRightRadius="0dp"
	            android:bottomLeftRadius="0dp"
	            android:bottomRightRadius="8dp" />
        	<padding 
        	    android:left="10dp" 
        	    android:top="6dp" 
        	    android:right="10dp" 
        	    android:bottom="6dp" />
	    </shape>
	</item>
	
	<item 
	    android:state_focused="true">
	    
	    <shape>
	        
	        <solid android:color="#FEF494" />
	        		        
	        <stroke 
	            android:width="2dp" 
	            android:color="#C7A626" />
	        <corners 
	            android:topLeftRadius="3dp"
	            android:topRightRadius="3dp"
	            android:bottomLeftRadius="3dp"
	            android:bottomRightRadius="3dp" />
	        <padding 
	            android:left="10dp" 
	            android:top="6dp" 
	            android:right="10dp"
	            android:bottom="6dp" />
	    </shape>
	</item>
	<item>
	    <shape>
	        <solid android:color="#FFFFFF" />
		        
	        <stroke 
	            android:width="2dp" 
	            android:color="#C7A626" />
	        <corners 
	            android:topLeftRadius="3dp"
	            android:topRightRadius="3dp"
	            android:bottomLeftRadius="3dp"
	            android:bottomRightRadius="3dp" />
	        <padding 
	            android:left="10dp" 
	            android:top="6dp" 
	            android:right="10dp"
	            android:bottom="6dp" />
	    </shape>
	</item>
	
</selector>
