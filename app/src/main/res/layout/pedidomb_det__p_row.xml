<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp"
    android:background="@drawable/fundopedido"
     >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="05dp"
        android:layout_marginBottom="05dp"
        >
    
    <TextView
        android:id="@+id/lbl_titulo_006"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="ITEM DO PEDIDO" />

    <ImageView
        android:id="@+id/item_trash_006"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="97dp"
        android:background="@color/white"
        android:src="@drawable/trash_24" />

    <ImageView
        android:id="@+id/item_information_006"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="61dp"
        android:layout_toLeftOf="@+id/item_trash_006"
        android:src="@drawable/about_24" />

    <ImageView
        android:id="@+id/item_max_min_006"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp"
        android:src="@drawable/maximize_24_azul" />

    <ImageView
        android:id="@+id/flag_06"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/item_information_006"
        android:layout_marginLeft="60dp"
        android:background="@color/white"
        android:src="@drawable/flag_24_vermelho" />
    
	</RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="05dp"
        android:layout_marginBottom="05dp"
        >
    
       <TableLayout
	    android:id="@+id/table_006"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffffff"
	    android:shrinkColumns="*"
	    android:stretchColumns="*" 
	    >

	    
	    <TableRow
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" >
	        
	         <TextView
	            android:id="@+id/lbl_id_006"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal|center_vertical"
	            android:text="ID"
	            android:textColor="@color/red"
	            android:textSize="12sp"
	            android:background="@drawable/titleproduto"
	             />

	          <TextView
	            android:id="@+id/lbl_produto_006"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal|center_vertical"
	            android:text="PRODUTO"
	            android:textColor="@color/red"
	            android:textSize="12sp"
	            android:background="@drawable/titleproduto"
	            
	             />
	        	        
	        
	          <TextView
	            android:id="@+id/lbl_qtd_006"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal|center_vertical"
	            android:text="QTD"
	            android:textColor="@color/red"
	            android:textSize="12sp"
	            android:background="@drawable/titleproduto"
	            
	             />


	           <TextView
	            android:id="@+id/lbl_prcven_006"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal|center_vertical"
	            android:text="P.UNIT"
	            android:textColor="@color/red"
	            android:textSize="12sp"
	            android:background="@drawable/titleproduto"
	            
	             />

	           <TextView
	            android:id="@+id/lbl_desconto_006"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal|center_vertical"
	            android:text="DESC %"
	            android:textColor="@color/red"
	            android:textSize="12sp"
	            android:background="@drawable/titleproduto"
	            
	             />

	           <TextView
	            android:id="@+id/lbl_total_006"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal|center_vertical"
	            android:text="TOTAL"
	            android:textColor="@color/red"
	            android:textSize="12sp"
	            android:background="@drawable/titleproduto"
	           
	             />
	           	           	           	          	        
	    </TableRow>
        
	    <TableRow
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" >
	        
	         <TextView
	            android:id="@+id/txt_id_006"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="left"
	            android:text="001"
	            android:textColor="@color/dark_blue"
	            android:textSize="12sp"
	            android:background="@drawable/detalheproduto"
	             />

	          <TextView
	            android:id="@+id/txt_produto_006"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical|left"
	            android:text="027202020-BROTO LEGAL ALIMENTOS"
	            android:textColor="@color/dark_blue"
	            android:textSize="12sp"
	            android:background="@drawable/detalheproduto"
	             />
	        	        
	        
	          <TextView
	            android:id="@+id/txt_qtd_006"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical|right"
	            android:text="100 FD"
	            android:textColor="@color/dark_blue"
	            android:textSize="12sp"
	            android:background="@drawable/detalheproduto"
	             />


	           <TextView
	            android:id="@+id/txt_prcven_006"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical|right"
	            android:text="60,10"
	            android:textColor="@color/dark_blue"
	            android:textSize="12sp"
	            android:background="@drawable/detalheproduto"
	             />

	           <TextView
	            android:id="@+id/txt_desconto_006"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical|center"
	            android:text="5%"
	            android:textColor="@color/dark_blue"
	            android:textSize="12sp"
	            android:background="@drawable/detalheproduto"
	             />

	           <TextView
	            android:id="@+id/txt_total_006"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical|right"
	            android:text="230,00"
	            android:textColor="@color/dark_blue"
	            android:textSize="12sp"
	            android:background="@drawable/detalheproduto"
	             />
	           	           	           	          	        
	    </TableRow>

	    	    <TableRow
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" >
	        
	         <TextView
	            android:id="@+id/txt_bonificacao_006"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_span="2"
	            android:gravity="center_vertical|center"
	            android:text="BONIFICAÇÃO"
	            android:textColor="@color/dark_blue"
	            android:textSize="12sp"
	            android:background="@drawable/detalheproduto"
	             />

	        	        
	        
	          <TextView
	            android:id="@+id/txt_qtd_boni_006"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical|right"
	            android:text="100 FD"
	            android:textColor="@color/dark_blue"
	            android:textSize="12sp"
	            android:background="@drawable/detalheproduto"
	             />


	           <TextView
	            android:id="@+id/txt_prcven_boni_006"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical|right"
	            android:text="60,10"
	            android:textColor="@color/dark_blue"
	            android:textSize="12sp"
	            android:background="@drawable/detalheproduto"
	             />

	           <TextView
	            android:id="@+id/txt_desconto_boni_006"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical|center"
	            android:text="5%"
	            android:textColor="@color/dark_blue"
	            android:textSize="12sp"
	            android:background="@drawable/detalheproduto"
	             />

	           <TextView
	            android:id="@+id/txt_total_boni_006"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical|right"
	            android:text="230,00"
	            android:textColor="@color/dark_blue"
	            android:textSize="12sp"
	            android:background="@drawable/detalheproduto"
	             />
	           	           	           	          	        
	    </TableRow>
	    
	    <TableRow>
	        
	        <TextView
	            android:id="@+id/lbl_verba__006"
	            android:layout_span="3"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="left"
	            android:text="001"
	            android:textColor="@color/dark_blue"
	            android:textSize="12sp"
	            android:background="@drawable/detalheproduto"
	             />

	        	        
	        
	          <TextView
	            android:id="@+id/lbl_acordo_006"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_span="3"
	            android:gravity="left"
	            android:text="100 FD"
	            android:textColor="@color/dark_blue"
	            android:textSize="12sp"
	            android:background="@drawable/detalheproduto"
	             />

        
	    </TableRow>	    
       </TableLayout>
        
    </RelativeLayout>
    
