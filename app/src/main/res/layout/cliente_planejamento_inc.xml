<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/fundo"
	>


	<LinearLayout
		android:id="@+id/parentLayout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<LinearLayout
			android:id="@+id/pedido_filtros_404"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:background="@color/barLightColor"
			>

			<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10sp"
				android:id="@+id/bt_cadastro_404"
				android:src="@drawable/cliente_30"
				/>


			<TextView
				android:id="@+id/txt_database_404"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginLeft="10sp"
				android:gravity="left|center_vertical"
				android:textColor="@color/red"
				android:text="DATA BASE: 20/01/2016 - Periodicidade: SEMANAL\nlinhas de observação sjdhkjshd kjhdjshdjks jkhsdjkshdkjsd"/>


			<TextView
				android:id="@+id/txt_periodo_404"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginLeft="10sp"
				android:gravity="left|center_vertical"
				android:textColor="@color/red"
				android:text="Periodicidade:\nSEMANAL"/>


		</LinearLayout>



		<TableLayout
			android:id="@+id/table_404"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:shrinkColumns="*"
			android:stretchColumns="*"
			>

			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="match_parent">


				<TextView
					android:id="@+id/txt_codigo_404"
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:gravity="left|center_vertical"
					android:text="Código Protheus: 999999-09"
					android:textColor="@color/dark_blue"
					android:textSize="14sp"

					/>


				<TextView
					android:id="@+id/txt_situacao_404"
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:gravity="left|center_vertical"
					android:text="Situacao: Ativa"
					android:textColor="@color/dark_blue"
					android:textSize="14sp"

					/>


			</TableRow>

			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" >

				<TextView
					android:id="@+id/txt_cliente_404"
					android:layout_span="2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:text="000000-00 CARREFOUR CAMPINAS LTDA"
					android:textColor="@color/black"
					/>
			</TableRow>


			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" >

				<TextView
					android:id="@+id/txt_cnpj_404"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:text="CNPJ/CPF: 62.901.210.0001-08"
					android:textColor="@color/black"
					android:textSize="14sp"
					/>

				<TextView
					android:id="@+id/txt_ie_404"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:text="I.E.: 244.244.255.244"
					android:textColor="@color/black"
					android:textSize="14sp"
					/>

			</TableRow>

			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" >

				<TextView
					android:id="@+id/txt_cidade_404"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:text="CIDADE:CAMPINAS"
					android:textColor="@color/black"
					/>

				<TextView
					android:id="@+id/txt_telefone_404"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:text="TELEFONE (19) 8383838383"
					android:textColor="@color/black"
					/>

			</TableRow>


			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" >

				<TextView
					android:id="@+id/txt_desc_rede_404"
					android:layout_span="2"
					android:layout_width="fill_parent"
					android:layout_height="35dp"
					android:gravity="left|center_vertical"
					android:text="000.000 DESCRICAO DA REDE !!!!"
					android:textColor="@color/orange"
					android:textSize="14sp"
					/>
			</TableRow>




		</TableLayout>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/fundo_preto"
			android:orientation="horizontal" >

		</LinearLayout>
	</LinearLayout>

	<ImageButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/bt_processo_404"
		android:src="@drawable/calendario_plus_30"
		android:layout_alignParentEnd="true" />


</RelativeLayout>
