<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	tools:context=".help20.Help20Activity" >

       
    <LinearLayout 
        android:id="@+id/help_bar_h20"
        android:layout_width			= "fill_parent"
        android:layout_height			= "wrap_content"
        android:layout_alignParentTop	= "true"
        android:background="@drawable/seachedittext"
        android:orientation="vertical"
        >
        
        <LinearLayout             
            android:id="@+id/help_cabec_h20"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView 
	            android:id="@+id/help_texto_h20"
			    android:layout_width="fill_parent"
			    android:layout_height="30sp"
			    android:layout_margin="1sp"
			    android:layout_weight="2"
			    android:padding="1sp"
			    android:text="CADASTRO DE PRODUTO"
			    android:textSize="18sp"
			    android:gravity="center_horizontal|center_vertical"
			    android:textColor="@color/textFieldColor" />
            />
        </LinearLayout>        
        
        <LinearLayout 
        android:id="@+id/help_pes_h20"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
	    <EditText
		    android:id="@+id/help_pesquisar_h20"
		    android:layout_width="fill_parent"
		    android:layout_height="30sp"
		    android:layout_margin="1sp"
		    android:layout_weight="2"
		    android:padding="1sp"
		    android:background="@drawable/seachedittext"
            android:drawableRight="@drawable/search"
		    android:hint="Digite o que procura...."
		    android:textColor="@color/textFieldColor" />
	    
	    <Spinner
        	android:id="@+id/help_ordem_h20"
		    android:layout_margin="1sp"
		    android:layout_weight="8"
        	android:layout_width="match_parent"
        	android:layout_height="30sp"

         />
	    
	    
	    
    	</LinearLayout>
    

        <RelativeLayout 
        android:id="@+id/help_filtro_h20"
        android:layout_width  = "wrap_content"
        android:layout_height = "wrap_content"
        android:orientation="horizontal"
        >

        <TextView 
            android:id="@+id/help_filtrando_h20"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="1sp"
		    android:layout_alignParentLeft="true"
		    android:padding="1sp"
		    android:text="Lista Filtrada..."
		    android:textSize="12sp"
		    android:textColor="@color/red"
		    android:gravity="center_horizontal|center_vertical"
		     />
            
            	    
	    <GridView 
			android:id="@+id/gdMenu"
			android:layout_width="wrap_content" 
			android:layout_height="60dp"
			android:padding="5dp"
			android:verticalSpacing="5dp"
	
			android:horizontalSpacing="5dp"
			android:numColumns="4"
			android:columnWidth="60dp"
			android:stretchMode="columnWidth"
	
	        android:gravity="center"
		/>

	    <ImageView
	        android:id="@+id/cancela_filtro_help_20"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="65dp"
	        android:src="@drawable/erro_20_vermelho" />

	    <ImageView
	        android:id="@+id/information_filtro_002_help_20"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="25dp"
	        android:src="@drawable/about_24" />
	    
	    
	    
	    
    </RelativeLayout>
    
        
        
        
    </LinearLayout>
        
    <ListView
        android:id            = "@+id/lvHelp_h20"
        android:layout_below  = "@+id/help_bar_h20"
        android:layout_marginTop="5sp" 
        android:layout_width  =  "fill_parent"
        android:layout_height =  "fill_parent"
        android:clickable	  = "true"
        android:divider="@color/black"
        android:dividerHeight="1sp"
        android:background="@drawable/seachedittext"
        >
    </ListView>
    
</RelativeLayout>
