<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <LinearLayout
        android:id="@+id/cabUser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="03dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_edcampo_577"
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:gravity="top"
            android:textColor="@color/dark_blue"
            android:background="@drawable/fundo3"
            android:scrollbars = "vertical"
            >
        </TextView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cabUser"
        android:layout_alignRight="@+id/cabUser"
        android:layout_below="@+id/cabUser"
        android:orientation="horizontal"
        android:layout_marginTop="35sp"
        android:paddingTop="4dp" >

        <Button
            android:id="@+id/btn_577_ok"
            style="?android:attr/buttonStyleSmall"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.80"
            android:background="@drawable/custombutton"
            android:fontFamily="Helvetica"
            android:text="Voltar" />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cabUser"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp">


    </LinearLayout>

</RelativeLayout>