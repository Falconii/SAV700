<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp"
    android:background="@drawable/fundopedido"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_produto_023"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="ITEM 001 - JHSDJKHSJKDHJKSHDJKSHJKDHSAJDHJKSAHDJKSA FD "
            android:textColor="@color/black"
            android:textSize="14sp"
            android:background="@drawable/detalheproduto"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="05dp"
        android:layout_marginTop="05dp">

        <TableLayout
            android:id="@+id/table_023"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:shrinkColumns="*"
            android:stretchColumns="*">


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lbl_operacao_023"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/titleproduto"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="OPERAÇÃO"
                    android:textColor="@color/red"
                    android:textSize="12sp"

                    />


                <TextView
                    android:id="@+id/lbl_qtd_023"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/titleproduto"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="QTD"
                    android:textColor="@color/red"
                    android:textSize="12sp"

                    />


                <TextView
                    android:id="@+id/lbl_prcven_023"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/titleproduto"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="P.UNIT"
                    android:textColor="@color/red"
                    android:textSize="12sp"

                    />


                <TextView
                    android:id="@+id/lbl_total_023"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/titleproduto"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="TOTAL ITEM"
                    android:textColor="@color/red"
                    android:textSize="12sp"

                    />

                <TextView
                    android:id="@+id/lbl_lote_023"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/titleproduto"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="LOTE"
                    android:textColor="@color/red"
                    android:textSize="12sp"

                    />

                <TextView
                    android:id="@+id/lbl_empacotamento_023"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/titleproduto"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="EMP."
                    android:textColor="@color/red"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/lbl_vencimento_023"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/titleproduto"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="VENC."
                    android:textColor="@color/red"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_venda_023"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/detalheproduto"
                    android:gravity="center_vertical|center"
                    android:text="VENDA"
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/txt_qtd_023"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/detalheproduto"
                    android:gravity="center_vertical|right"
                    android:text=" "
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/txt_prcven_023"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/detalheproduto"
                    android:gravity="center_vertical|right"
                    android:text=" "
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/txt_total_023"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/detalheproduto"
                    android:gravity="center_horizontal|right"
                    android:text=" "
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"

                    />

                <TextView
                    android:id="@+id/txt_lote_023"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/detalheproduto"
                    android:gravity="center_horizontal|center_vertical"
                    android:text=" "
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"

                    />

                <TextView
                    android:id="@+id/txt_empacotamento_023"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/detalheproduto"
                    android:gravity="center_horizontal|center_vertical"
                    android:text=" "
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_vencimento_023"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/detalheproduto"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="  "
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_verba_023"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/detalheproduto"
                    android:gravity="center_vertical|center"
                    android:text="Motivo"
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/txt_motivo_descricao_023"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/detalheproduto"
                    android:gravity="center_vertical|right"
                    android:text=" "
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:scrollHorizontally = "true"
                    android:minLines = "1"
                    android:maxLines = "1"/>

                <TextView
                    android:id="@+id/txt_obs_023"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/detalheproduto"
                    android:gravity="center_vertical|center"
                    android:text="   "
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:scrollHorizontally = "true"
                    android:minLines = "1"
                    android:maxLines = "1" />


            </TableRow>

        </TableLayout>

    </RelativeLayout>

</LinearLayout>