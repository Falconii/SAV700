<?xml version="1.0" encoding="utf-8"?>
   <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:paddingTop="@dimen/activity_vertical_margin"
			android:background="@drawable/customcategoria">


       <TextView
           android:id="@+id/txt_titulo_116"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:layout_alignParentTop="true"
           android:text="Dados Básicos Do Planejamento"
           android:textSize="24dp"
         />
       

       <TextView
           android:id="@+id/txt_data_116"
           android:layout_marginTop="10dp"
		   android:layout_below="@+id/txt_titulo_116"
           android:layout_width="150dp"
           android:layout_height="wrap_content"
           android:layout_marginLeft="5dp"
           android:text="Data Base"
         />

        <EditText
            android:id="@+id/edit_data_116"
            android:layout_below="@+id/txt_data_116"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/fundo"/>
        />

       <TextView
           android:id="@+id/txt_hora_116"
           android:layout_below="@+id/txt_titulo_116"
           android:layout_toRightOf="@+id/txt_data_116"
           android:layout_alignBaseline="@+id/txt_data_116"
           android:layout_alignBottom="@+id/txt_data_116"
           android:layout_alignLeft="@+id/edit_hora_116"
           android:layout_marginTop="10dp"
           android:layout_width="250dp"
           android:layout_height="wrap_content"
           android:text="Horário De  Visita"
           />
       

        <EditText
            android:id="@+id/edit_hora_116"
            android:background="@drawable/fundo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="00:00"
            android:layout_below="@+id/txt_hora_116"
            android:layout_alignEnd="@+id/bt_cancela_116">
        </EditText>


	<Spinner
		android:id="@+id/edit_periodo_116"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15sp"
		android:gravity="center"
		android:background="@drawable/fundo"
		android:layout_below="@+id/edit_data_116" />
	/>


	<TextView
		android:id="@+id/txt_obs_116"
		android:layout_below="@+id/edit_periodo_116"
		android:layout_marginTop="10dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:text="Observação"
		/>

	<EditText
		android:id="@+id/edit_observacao_116"
		android:layout_below="@+id/txt_obs_116"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:inputType="textCapCharacters"
		android:background="@drawable/fundo"/>


	<Button
   	           android:id="@+id/bt_confirma_116"
   	           android:layout_below="@+id/edit_observacao_116"
   	           android:layout_marginTop="15dp"
   	           android:layout_alignParentLeft="true"
   	           android:layout_width="180dp"
   	           android:layout_height="wrap_content"
   	           android:background="@drawable/fundo"
   	           android:fontFamily="Helvetica"
   	           android:text="Confirma" />
        
        <Button
   	           android:id="@+id/bt_cancela_116"
   	           android:layout_below="@+id/edit_observacao_116"
   	           android:layout_marginTop="15dp"
   	           android:layout_alignParentRight="true"
   	           android:layout_width="180dp"
   	           android:layout_height="wrap_content"
   	           android:background="@drawable/fundo"
   	           android:fontFamily="Helvetica"
			   android:text="Cancela"
               />
        
        
       
   </RelativeLayout>

