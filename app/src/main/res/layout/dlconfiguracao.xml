<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	>


	<TextView
		android:id="@+id/txt_titulo_127"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:layout_alignParentTop="true"
		android:text="Base De Dados"
		android:textSize="24dp"
		/>


	<Spinner
		android:id="@+id/sp_bases_127"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15sp"
		android:gravity="center"
		android:background="@drawable/fundo"
		android:layout_below="@+id/txt_titulo_127" />

	<ImageView
		android:layout_width="150sp"
		android:layout_height="100sp"
		app:srcCompat="@drawable/imglogo"
		android:scaleType="fitCenter"
		android:id="@+id/im_logo_127"
		android:layout_alignBottom="@+id/txt_titulo_127"
		android:layout_alignParentStart="true" />

</RelativeLayout>

