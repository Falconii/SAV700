<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fundo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >


    <ImageView
        android:id="@+id/im_comercial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/check_30"
        android:layout_marginLeft="15sp"/>

    <TextView
        android:id="@+id/tv_comercial"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:background="@drawable/customfundo01"
        android:text="COMERCIAL"
        android:gravity="center_horizontal"/>


    <ImageView
        android:id="@+id/im_logistica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/check_30"
        android:layout_marginLeft="15sp"/>

    <TextView
        android:id="@+id/tv_logistica"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:background="@drawable/customfundo01"
        android:text="LOGISTICA"
        android:gravity="center_horizontal"/>



    <ImageView
        android:id="@+id/im_documentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/check_30"
        android:layout_marginLeft="15sp"/>

    <TextView
        android:id="@+id/tv_documentos"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:background="@drawable/customfundo01"
        android:text="DOCUMENTOS"
        android:gravity="center_horizontal"/>

</LinearLayout>
