<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_VDT"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fundo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/ll_linha_01_VDT"
        android:layout_width="match_parent"
        android:layout_below="@+id/lbl_titulo_VDT"
        android:layout_height="30sp"
        android:layout_marginTop="5sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_nome_VDT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="DATA"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:ellipsize="end"
            android:scrollHorizontally = "true"
            android:minLines = "3"
            android:maxLines = "3"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_vlr_VDT"
        android:layout_width="250sp"
        android:layout_height="30sp"
        android:layout_marginTop="5sp"
        android:gravity="center_vertical|right"
        android:layout_below="@+id/ll_linha_01_VDT"
        android:layout_alignParentEnd="true"
        android:textColor="@color/black"
        android:text="R$ 900,00"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/txt_qtd_VDT"
        android:layout_width="250sp"
        android:layout_height="30sp"
        android:layout_marginTop="5sp"
        android:gravity="center_vertical|right"
        android:layout_below="@+id/ll_linha_01_VDT"
        android:layout_toLeftOf="@+id/txt_vlr_VDT"
        android:text="QTD 600 FDS"
        android:textColor="@color/black"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/lbl_titulo_VDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="DATA: 12/05/2017"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </TextView>


</RelativeLayout>
