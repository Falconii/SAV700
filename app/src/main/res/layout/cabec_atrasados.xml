<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60sp"
    android:background="@drawable/fundo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <LinearLayout
        android:id="@+id/linha01_333"
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/cb_marcados_333"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_gravity="center_vertical"
            android:text="Marcar Todos"
            >
        </CheckBox>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:text="Agendamentos NÃ£o Apontados"
        android:textSize="20sp"
        android:textColor="@color/red"/>
    <TextView
        android:id="@+id/txt_agendados_333"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:text="Total Agendamentos: "
        android:layout_toLeftOf="@+id/bt_agenda_333"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5sp"
        android:textColor="@color/red">
    </TextView>
    <ImageButton
        android:id="@+id/bt_agenda_333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/calendario_plus_30"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
