<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.brotolegal.sav700.UsuarioActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_usuario"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar000"
        android:layout_marginTop="5sp">

        <LinearLayout
            android:id="@+id/linha_01_500"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- id -->
            <TextView
                android:id="@+id/lbl_codigo_800"
                android:layout_width="80sp"
                android:layout_height="30sp"
                android:gravity="center"
                android:text="CÃ³digo:"
                android:textColor="@color/red"
                android:background="@drawable/fundo"
                >
            </TextView>

            <TextView
                android:id="@+id/txt_codigo_800"
                android:layout_width="200sp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/dark_blue"
                android:background="@drawable/fundo3" >
            </TextView>

            <!-- Codigo -->
            <TextView
                android:id="@+id/lbl_expira_800"
                android:layout_marginLeft="10sp"
                android:layout_width="80sp"
                android:layout_height="30sp"
                android:gravity="center"
                android:text="Expira:"
                android:textColor="@color/red"
                android:background="@drawable/fundo"
                >
            </TextView>

            <TextView
                android:id="@+id/txt_expira_800"
                android:layout_width="120sp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/dark_blue"
                android:background="@drawable/fundo3" >
            </TextView>

            <!-- status  -->
            <TextView
                android:id="@+id/lbl_class_800"
                android:layout_marginLeft="10sp"
                android:layout_width="80sp"
                android:layout_height="30sp"
                android:gravity="center"
                android:text="Class."
                android:textColor="@color/red"
                android:background="@drawable/fundo"
                >
            </TextView>

            <TextView
                android:id="@+id/txt_class_800"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/dark_blue"
                android:background="@drawable/fundo3"
                >
            </TextView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linha_mensa_500"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linha_01_500"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <!-- MENSAGEM  -->
            <TextView
                android:id="@+id/lbl_vendedor_800"
                android:layout_width="80sp"
                android:layout_height="30sp"
                android:gravity="center"
                android:text="Vendedor:"
                android:textColor="@color/red"
                android:background="@drawable/fundo"
                >
            </TextView>

            <TextView
                android:id="@+id/txt_vendedor_800"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/dark_blue"
                android:background="@drawable/fundo3"
                >
            </TextView>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/linha_gps_500"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linha_mensa_500"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <!-- MENSAGEM  -->
            <TextView
                android:id="@+id/lbl_gps_800"
                android:layout_width="80sp"
                android:layout_height="30sp"
                android:gravity="center"
                android:text="GPS:"
                android:textColor="@color/red"
                android:background="@drawable/fundo"
                >
            </TextView>

            <TextView
                android:id="@+id/txt_gsp_800"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/dark_blue"
                android:background="@drawable/fundo3"
                >
            </TextView>



        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>



