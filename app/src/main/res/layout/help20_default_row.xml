<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:clickable="true" >

    <CheckBox
        android:id="@+id/help_cb_help20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/letra_help20"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/letraquadrada"
        android:text="P"
        android:layout_toRightOf="@+id/help_cb_help20"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/help_mensagem1_help20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/letra_help20"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="linha 1"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/help_mensagem2_help20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/help_mensagem1_help20"
            android:layout_toRightOf="@+id/letra_help20"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="linha 2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/texto1_help20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/help_mensagem2_help20"
            android:layout_alignStart="@+id/help_mensagem2_help20"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="ASASAS"
            android:textSize="15sp"
            android:textColor="@color/dark_blue"/>

        <TextView
            android:id="@+id/texto2_help20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texto1_help20"
            android:layout_alignStart="@+id/help_mensagem2_help20"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="TESTE"
            android:textSize="15sp"
            android:textColor="@color/dark_blue"/>


</RelativeLayout>
