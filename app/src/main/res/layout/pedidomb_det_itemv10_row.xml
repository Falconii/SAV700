<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pedidomb_det_itemV10_row"
    android:layout_width="match_parent"
    android:layout_height="100sp"
    android:orientation="vertical"
    android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    android:layout_marginBottom="05sp"
    android:clickable="true"
    android:background="@drawable/custombutton"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:orientation="horizontal"
        android:id="@+id/linha01_007"
        android:weightSum="1">
        <TextView
            android:id="@+id/lbl_produto_007"
            android:layout_width="120sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="127.00.00.00"

            />

        <TextView
            android:id="@+id/lbl_descricao_007"
            android:layout_marginLeft="35sp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:textSize="16sp"
            android:text="FEIJAO BROTO LEGAL !!!!"
            android:textColor="@color/black"
            android:layout_width="500sp"
            android:layout_weight="0.41" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:orientation="horizontal"
        android:layout_below="@+id/linha01_007"
        android:id="@+id/linha02_007">

        <TextView
            android:id="@+id/lbl_importado_007"
            android:layout_height="30sp"
            android:gravity="left|center"
            android:textSize="14sp"
            android:text="Importado"
            android:layout_marginLeft="35sp"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            />


        <TextView
            android:id="@+id/lbl_ultimo_preco_007"
            android:layout_height="30sp"
            android:gravity="left|center"
            android:textSize="14sp"
            android:text="Último Preço: "
            android:layout_marginLeft="155sp"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            />

        <TextView
            android:id="@+id/lbl_preco_venda_007"
            android:layout_height="30sp"
            android:layout_marginLeft="5sp"
            android:gravity="left|center"
            android:textSize="14sp"
            android:text="Preço de Venda: "
            android:textColor="@color/black"
            android:layout_width="wrap_content"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:orientation="horizontal"
        android:layout_below="@+id/linha02_007"
        android:weightSum="25"
        android:id="@+id/linha03_007">

        <TextView
            android:id="@+id/lbl_meta_007"
            android:layout_height="30sp"
            android:layout_width="0sp"
            android:layout_weight="2"
            android:gravity="left|center_horizontal|center_vertical"
            android:textSize="14sp"
            android:text="META:"
            android:textColor="@color/red"
            />

        <TextView
            android:id="@+id/txt_meta_007"
            android:layout_height="30sp"
            android:layout_width="0sp"
            android:layout_weight="3"
            android:gravity="left|center"
            android:textSize="14sp"
            android:text="999"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/lbl_carteira_007"
            android:layout_height="30sp"
            android:layout_width="0sp"
            android:layout_weight="2"
            android:gravity="left|center_horizontal|center_vertical"
            android:textSize="14sp"
            android:text="Cart.:"
            android:textColor="@color/red"
            />

        <TextView
            android:id="@+id/txt_carteira_007"
            android:layout_height="30sp"
            android:layout_width="0sp"
            android:layout_weight="3"
            android:gravity="left|center"
            android:textSize="14sp"
            android:text="999"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/lbl_realizado_007"
            android:layout_height="30sp"
            android:layout_width="0sp"
            android:layout_weight="2"
            android:gravity="left|center_horizontal|center_vertical"
            android:textSize="14sp"
            android:text="Real.:"
            android:textColor="@color/red"
            />

        <TextView
            android:id="@+id/txt_realizado_007"
            android:layout_height="30sp"
            android:layout_width="0sp"
            android:layout_weight="3"
            android:gravity="left|center_horizontal|center_vertical"
            android:textSize="14sp"
            android:text="999"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/lbl_realizado_carteira_007"
            android:layout_height="30sp"
            android:layout_width="0sp"
            android:layout_weight="2"
            android:gravity="left|center_horizontal|center_vertical"
            android:textSize="14sp"
            android:text="R +C :"
            android:textColor="@color/red"
            />

        <TextView
            android:id="@+id/txt_realizado_carteira_007"
            android:layout_height="30sp"
            android:layout_width="0sp"
            android:layout_weight="3"
            android:gravity="left|center_horizontal|center_vertical"
            android:textSize="14sp"
            android:text="999"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/lbl_falta_007"
            android:layout_height="30sp"
            android:layout_width="0sp"
            android:layout_weight="2"
            android:gravity="left|center_horizontal|center_vertical"
            android:textSize="14sp"
            android:text="FALTA.:"
            android:textColor="@color/red"
            />

        <TextView
            android:id="@+id/txt_falta_007"
            android:layout_height="30sp"
            android:layout_width="0sp"
            android:layout_weight="3"
            android:gravity="left|center_horizontal|center_vertical"
            android:textSize="14sp"
            android:text="999"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_bola_007"
        android:src="@drawable/bola_verde"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="05sp"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:scaleType="fitCenter"

        />

    <ImageView
        android:id="@+id/img_dollar_07"
        android:src="@drawable/ic_dollar_48"
        android:layout_alignParentLeft="true"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_below="@+id/linha01_007"
        android:layout_alignParentStart="true" />
</RelativeLayout>