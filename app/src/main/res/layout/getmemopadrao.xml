<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <LinearLayout
        android:id="@+id/cabUser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="03dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_576_texto1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="Helvetica"
            android:textSize="16sp"
            android:background="@drawable/fundo_preto"
            android:text="MARCOS RENATO FALCONI" />

        <EditText
            android:id="@+id/edCampo_576"
            android:layout_marginTop="05sp"
            android:background="@drawable/fundo"
            android:layout_width="fill_parent"
            android:fontFamily="Helvetica"
            android:textSize="18sp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:maxLines="50"
            android:layout_height="300sp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cabUser"
        android:layout_alignRight="@+id/cabUser"
        android:layout_below="@+id/cabUser"
        android:orientation="horizontal"
        android:layout_marginTop="35sp"
        android:paddingTop="4dp" >

        <Button
            android:id="@+id/btn_576_can"
            style="?android:attr/buttonStyleSmall"
            android:layout_marginLeft="0sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.80"
            android:padding="10dp"
            android:background="@drawable/custombutton"
            android:fontFamily="Helvetica"
            android:text="Cancela"
            android:textAlignment="center"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_576_ok"
            style="?android:attr/buttonStyleSmall"
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.80"
            android:background="@drawable/custombutton"
            android:fontFamily="Helvetica"
            android:text="Confirma" />
    </LinearLayout>


    <TextView
        android:id="@+id/lbl_576_contador"
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10sp"
        android:layout_marginRight="3sp"
        android:textColor="@color/red"
        android:text=" "
        android:textSize="14sp"
        android:gravity="center_vertical|right" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cabUser"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp">


        <TextView
            android:id="@+id/txt_576_error"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="Helvetica"
            android:textSize="14sp"
            android:textColor="@color/red"
            android:text="Tamanho Máximo do Campo são 40 caractes" />


    </LinearLayout>

</RelativeLayout>