<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fundo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/lbl_titulo_721"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Cliente Ou Rede Do Relatório:"
        android:textColor="@color/red"
        android:background="@drawable/fundo"
        >
    </TextView>


    <LinearLayout
    android:id="@+id/ll_cliente_721"
    android:layout_width="match_parent"
    android:layout_below="@+id/lbl_titulo_721"
    android:layout_marginTop="5sp"
    android:layout_height="30sp"
    android:weightSum="7"
    android:orientation="horizontal">


        <Switch
            android:id="@+id/swClienteRede_721"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textOff="CLIENTE"
            android:textOn ="REDE"
            android:text   =""
            android:background="@color/md_blue_50"
            />
        <!-- codigo cliente -->
        <TextView
            android:id="@+id/lbl_codcli_721"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="10sp"
            android:gravity="center"
            android:text="CÓDICO"
            android:textColor="@color/red"
            android:background="@drawable/fundo"
            android:clickable="true"


            >
        </TextView>

        <TextView
            android:id="@+id/txt_codcli_721"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical|center_horizontal"
            android:text="000000-00"
            android:textColor="@color/dark_blue"
            android:background="@drawable/fundo3" >
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_razao_721"
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_cliente_721"
        android:layout_marginTop="5sp"
        android:layout_height="30sp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txt_razao_721"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical|center_horizontal"
            android:text="000000-00"
            android:textColor="@color/dark_blue"
            android:background="@drawable/fundo3" >
        </TextView>


    </LinearLayout>


    <!-- cb do filtro -->
    <CheckBox
        android:id="@+id/cb_filtro_721"
        android:layout_width="180sp"
        android:layout_height="30sp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="Considera o Filtro"
        android:textColor="@color/red"
        android:clickable="true"
        >
    </CheckBox>


</RelativeLayout>
