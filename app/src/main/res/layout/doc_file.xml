<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/fundo"
	>

	<LinearLayout
		android:id="@+id/parentLayout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >


		<TableLayout
			android:id="@+id/table_403"
			android:layout_marginLeft="50sp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:shrinkColumns="*"
			android:stretchColumns="*"
			>

			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="match_parent">


				<TextView
					android:id="@+id/txt_descricao_408"
					android:layout_width="fill_parent"
					android:layout_span="02"
					android:paddingLeft="05sp"
					android:layout_marginLeft="5sp"
					android:layout_marginRight="5sp"
					android:layout_height="30dp"
					android:gravity="left|center_vertical"
					android:text="CÃ³digo Protheus: 999999-09"
					android:textColor="@color/dark_blue"
					android:textSize="16sp"
					android:ellipsize="end"
					android:scrollHorizontally = "true"
					android:minLines = "2"
					android:maxLines = "2"

					/>



			</TableRow>
			
			<TableRow>

				<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
					android:id="@+id/cabec_403"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="3sp"
					android:layout_marginLeft="5sp"
					android:layout_marginRight="5sp"
					android:paddingTop="10sp"
					android:layout_span="02"
					android:gravity="center_horizontal"
					android:weightSum="10"
					>


					<ImageView
						android:id="@+id/flag_default_403"
						android:layout_width="0sp"
						android:layout_height="30sp"
						android:src="@drawable/ic_action_flag_amarela"
						android:adjustViewBounds="true"
						android:layout_weight="1"/>

					<TextView
						android:id="@+id/txt_path_403"
						android:layout_width="0sp"
						android:layout_height="30sp"
						android:layout_gravity="center"
						android:layout_weight="9"
						android:ellipsize="end"
						android:gravity="center_vertical|left"
						android:maxLines="2"
						android:minLines="2"
						android:scrollHorizontally="true"
						android:text="100,00"
						android:textColor="@color/black"
						android:textSize="14sp" />

				</LinearLayout>


			</TableRow>



		</TableLayout>
	</LinearLayout>

	<ImageButton
		android:layout_width="48sp"
		android:layout_height="48sp"
		android:scaleType="centerInside"
		android:id="@+id/bt_file_408"
		android:src="@drawable/cliente_30"
		android:layout_marginTop="20sp"
		/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/bt_anexar_408"
		android:text="Anexar"
		android:layout_alignParentEnd="true"
		android:layout_alignParentBottom="true"
		/>



</RelativeLayout>
