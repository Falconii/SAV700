<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:background="@drawable/customcategoria">

	<TextView
		android:id="@+id/titulo_121"
		android:layout_width="match_parent"
		android:layout_height="35sp"
		android:text="E-MAIL Será Enviado Na Sincronização."
		android:gravity="center_horizontal|center_vertical"
		android:textSize = "18sp"
		android:textColor="@color/black"
		android:background="@drawable/fundo"/>

	<CheckBox
		android:id="@+id/cb_enviar_email_121"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10sp"
		android:layout_below="@+id/titulo_121"
		android:text="Confirma Envio De E-Mail"
		android:textColor="@color/black"/>

	<TextView
		android:id="@+id/texto_121"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10sp"
		android:text="Destinatários: Para Mais De Um Separe-os  por ;"
		android:layout_below="@+id/cb_enviar_email_121"
		android:textSize = "16sp"
		android:textColor="@color/black"/>

	<EditText
		android:id="@+id/email_121"
		android:layout_width="fill_parent"
		android:layout_height="200sp"
		android:layout_below="@+id/texto_121"
		android:gravity="top"
		android:textColor="@color/dark_blue"
		android:scrollbars = "vertical"
		android:maxLines="10"
		android:background="@drawable/fundo"/>

	<Button
		android:id="@+id/bt_confirma_121"
		android:layout_below="@+id/email_121"
		android:layout_marginTop="15dp"
		android:layout_alignParentLeft="true"
		android:layout_width="180dp"
		android:layout_height="wrap_content"
		android:background="@drawable/fundo"
		android:fontFamily="Helvetica"
		android:text="Confirma" />

	<Button
		android:id="@+id/bt_cancela_121"
		android:layout_below="@+id/email_121"
		android:layout_marginTop="15dp"
		android:layout_alignParentRight="true"
		android:layout_width="180dp"
		android:layout_height="wrap_content"
		android:background="@drawable/fundo"
		android:fontFamily="Helvetica"
		android:text="Cancela"
		/>


</RelativeLayout>

