<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:orientation="vertical"
	tools:context="br.com.brotolegal.sav700.help20.Help20Activity">



       
    <LinearLayout 
        android:id="@+id/help_bar_h20"
        android:layout_width			= "fill_parent"
        android:layout_height			= "wrap_content"
        android:layout_alignParentTop	= "true"
        android:background="@drawable/seachedittext"
        android:orientation="vertical"
        >

		<android.support.design.widget.AppBarLayout
			android:id="@+id/appbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="@dimen/appbar_padding_top"
			android:theme="@style/AppTheme.AppBarOverlay">

			<android.support.v7.widget.Toolbar
				android:id="@+id/tbhelp20"
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				android:background="?attr/colorPrimary"
				app:layout_scrollFlags="scroll|enterAlways"
				app:popupTheme="@style/AppTheme.PopupOverlay">

			</android.support.v7.widget.Toolbar>

		</android.support.design.widget.AppBarLayout>

		<LinearLayout
            android:id="@+id/help_cabec_h20"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView 
	            android:id="@+id/help_texto_h20"
			    android:layout_width="fill_parent"
			    android:layout_height="30sp"
			    android:layout_margin="1sp"
			    android:layout_weight="2"
			    android:padding="1sp"
			    android:text="CADASTRO DE PRODUTO"
			    android:textSize="18sp"
			    android:gravity="center_horizontal|center_vertical"
			    android:textColor="@color/textFieldColor" />
            />
        </LinearLayout>        
        
        <LinearLayout 
        android:id="@+id/help_pes_h20"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
	    <EditText
		    android:id="@+id/help_pesquisar_h20"
		    android:layout_width="fill_parent"
		    android:layout_height="30sp"
		    android:layout_margin="1sp"
		    android:layout_weight="2"
		    android:padding="1sp"
		    android:background="@drawable/seachedittext"
            android:drawableRight="@drawable/search"
		    android:hint="Digite o que procura...."
		    android:textColor="@color/textFieldColor" />
	    
	    <Spinner
        	android:id="@+id/help_ordem_h20"
		    android:layout_margin="1sp"
		    android:layout_weight="8"
        	android:layout_width="match_parent"
        	android:layout_height="30sp"
			android:background="@drawable/seachedittext"
             />
	    
	    
	    
    	</LinearLayout>
    

        <RelativeLayout 
        android:id="@+id/help_filtro_h20"
        android:layout_width  = "wrap_content"
        android:layout_height = "wrap_content"
        >
	    
	     <GridView 
			android:id="@+id/gd_Help_20"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content"
			android:padding="5dp"
			android:verticalSpacing="5dp"
			android:horizontalSpacing="5dp"
			android:numColumns="4"
			android:columnWidth="65dp"
			android:stretchMode="columnWidth"
	        android:gravity="start|top"
			/>

	    <ImageView
	        android:id="@+id/information_filtro_002_help_20"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="25dp"
	        android:src="@drawable/about_50_azul" />
	    
	    
	    
	    
    </RelativeLayout>
    
        
        
        
    </LinearLayout>
        
    <ListView
        android:id            = "@+id/lvHelp_h20"
        android:layout_below  = "@+id/help_bar_h20"
        android:layout_marginTop="5sp" 
        android:layout_width  =  "fill_parent"
        android:layout_height =  "fill_parent"
        android:clickable	  = "true"
        android:divider="@color/dark_blue"
        android:dividerHeight="2sp"
        android:background="@drawable/seachedittext"
        >
    </ListView>
    
</RelativeLayout>
