<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="br.com.brotolegal.sav700.DispositivoActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_dispositivo"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:id="@+id/rl_dispositivo"
        android:layout_below="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:layout_width      = "wrap_content"
            android:layout_height     = "wrap_content"
            android:layout_marginTop  = "5dp"
            android:layout_marginLeft = "5dp"
            android:id="@+id/logo_100"
            android:src="@drawable/imglogo"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="S.A.V\nAlocação de Dispositivo\nSistema De Apoio Ao Vendedor"
            android:id="@+id/titulo_333"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/lbl_user_333"
            android:layout_width      = "wrap_content"
            android:layout_height     = "wrap_content"
            android:text              = "Usuário:"
            android:textColor         = "@color/colorPrimary"
            android:layout_gravity    = "center_horizontal|center_vertical"
            android:gravity           = "center_vertical"
            android:layout_below      = "@+id/titulo_333"
            android:layout_marginTop  = "50sp"
            android:layout_alignStart="@+id/titulo_333"
            >
        </TextView>


        <TextView
            android:id="@+id/txt_user_333"
            android:drawableLeft  = "@drawable/icuser"
            android:background    = "@drawable/fundo3"
            android:layout_width  = "400sp"
            android:layout_height = "wrap_content"
            android:inputType     = "numberSigned"
            android:fontFamily    = "Helvetica"
            android:layout_below      = "@+id/lbl_user_333"
            android:gravity           = "center_vertical"
            android:layout_alignStart="@+id/titulo_333"
            />

        <TextView
            android:id="@+id/lbl_ativo_333"
            android:layout_width      = "wrap_content"
            android:layout_height     = "wrap_content"
            android:text              = "Ativo Fixo"
            android:textColor         = "@color/colorPrimary"
            android:layout_gravity    = "center_horizontal|center_vertical"
            android:gravity           = "center_vertical"
            android:layout_below      = "@+id/txt_user_333"
            android:layout_marginTop  = "25sp"
            android:layout_alignStart="@+id/titulo_333"
            >
        </TextView>


        <TextView
            android:id="@+id/txt_ativo_333"
            android:drawableLeft="@drawable/imobilizado_32"
            android:background    = "@drawable/fundo3"
            android:layout_width  = "400sp"
            android:layout_height = "wrap_content"
            android:inputType     = "numberSigned"
            android:fontFamily    = "Helvetica"
            android:layout_below      = "@+id/lbl_ativo_333"
            android:gravity           = "center_vertical|center_horizontal"
            android:layout_alignStart="@+id/titulo_333"
            />




        <TextView
            android:id="@+id/txt_linha_01_333"
            android:drawableLeft  = "@drawable/ic_celular"
            android:background    = "@drawable/fundo3"
            android:layout_width  = "400sp"
            android:layout_height = "wrap_content"
            android:layout_marginTop="25sp"
            android:inputType     = "numberSigned"
            android:fontFamily    = "Helvetica"
            android:layout_below      = "@+id/txt_ativo_333"
            android:gravity           = "center_vertical|center_horizontal"
            android:layout_alignStart="@+id/titulo_333"
            />


        <TextView
            android:id="@+id/txt_linha_02_333"
            android:drawableLeft  = "@drawable/ic_celular"
            android:background    = "@drawable/fundo3"
            android:layout_width  = "400sp"
            android:layout_height = "wrap_content"
            android:layout_marginTop="15sp"
            android:inputType     = "numberSigned"
            android:fontFamily    = "Helvetica"
            android:layout_below      = "@+id/txt_linha_01_333"
            android:gravity           = "center_vertical|center_horizontal"
            android:layout_alignStart="@+id/titulo_333"
            android:text="txt_linha_02_333"
            />


        <TextView
            android:id="@+id/txt_linha_03_333"
            android:drawableLeft  = "@drawable/ic_os"
            android:background    = "@drawable/fundo3"
            android:layout_width  = "400sp"
            android:layout_height = "wrap_content"
            android:layout_marginTop="25sp"
            android:inputType     = "numberSigned"
            android:fontFamily    = "Helvetica"
            android:layout_below      = "@+id/txt_linha_02_333"
            android:gravity           = "center_vertical|center_horizontal"
            android:layout_alignStart="@+id/titulo_333"
            android:text="txt_linha_02_333"
            />


        <TextView
            android:id="@+id/txt_linha_04_333"
            android:drawableLeft  = "@drawable/ic_id_verficado"
            android:background    = "@drawable/fundo3"
            android:layout_width  = "400sp"
            android:layout_height = "wrap_content"
            android:layout_marginTop="25sp"
            android:inputType     = "numberSigned"
            android:fontFamily    = "Helvetica"
            android:layout_below      = "@+id/txt_linha_03_333"
            android:gravity           = "center_vertical|center_horizontal"
            android:layout_alignStart="@+id/titulo_333"
            android:text="txt_linha_04_333"
            />


        <TextView
            android:id="@+id/txt_linha_05_333"
            android:drawableLeft  = "@drawable/ic_id_verficado"
            android:background    = "@drawable/fundo3"
            android:layout_width  = "400sp"
            android:layout_height = "wrap_content"
            android:layout_marginTop="25sp"
            android:inputType     = "numberSigned"
            android:fontFamily    = "Helvetica"
            android:layout_below      = "@+id/txt_linha_04_333"
            android:gravity           = "center_vertical|center_horizontal"
            android:layout_alignStart="@+id/titulo_333"
            android:text="txt_linha_05_333"
            />

        <TextView
            android:id="@+id/txt_linha_06_333"
            android:drawableLeft  = "@drawable/ic_id_verficado"
            android:background    = "@drawable/fundo3"
            android:layout_width  = "400sp"
            android:layout_height = "wrap_content"
            android:layout_marginTop="25sp"
            android:inputType     = "numberSigned"
            android:fontFamily    = "Helvetica"
            android:layout_below      = "@+id/txt_linha_05_333"
            android:gravity           = "center_vertical|center_horizontal"
            android:layout_alignStart="@+id/titulo_333"
            android:text="txt_linha_06_333"
            />


    </RelativeLayout>

</RelativeLayout>
