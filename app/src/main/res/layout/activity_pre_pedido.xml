<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height= "match_parent"
    android:paddingBottom= "@dimen/activity_vertical_margin"
    android:paddingLeft  = "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop   = "@dimen/activity_vertical_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="br.com.brotolegal.sav700.PrePedidoActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_prepedido_568"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar">

        <LinearLayout
            android:id="@+id/linha_03_568"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <!-- CLIENTE  -->
            <TextView
                android:id="@+id/lbl_cliente_568"
                android:layout_width="80sp"
                android:layout_height="30sp"
                android:gravity="center"
                android:text="Cliente"
                android:textColor="@color/red"
                android:background="@drawable/fundo"
                >
            </TextView>

            <TextView
                android:id="@+id/txt_cliente_568"
                android:layout_width="fill_parent"
                android:layout_height="30sp"
                android:gravity="center"
                android:textColor="@color/dark_blue"
                android:background="@drawable/fundo3"
                >
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linha_04_568"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linha_03_568"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <!-- Cond. Pagto  -->
            <Spinner
                android:id="@+id/sp_condpagto_568"
                android:background="@drawable/fundo"
                android:layout_below="@+id/lbConexao_20"
                android:drawSelectorOnTop="true"
                android:layout_width="280sp"
                android:layout_height="30sp"
                android:gravity="center"
                android:textColor="@color/dark_blue"

                />


            <!-- Tab Preco -->
            <Spinner
                android:id="@+id/sp_tabpreco_568"
                android:layout_width="280sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:gravity="center"
                android:text="lkçlkdlçskdlçkaslçdklçsad"
                android:textColor="@color/dark_blue"
                android:background="@drawable/fundo"/>

            <!-- fardos previstos -->
            <TextView
                android:id="@+id/lbl_fardos_previstos_568"
                android:layout_width="80sp"
                android:layout_height="30sp"
                android:layout_marginLeft="10sp"
                android:gravity="center"
                android:text="Fds Prev."
                android:textColor="@color/green"
                android:background="@drawable/fundo"
                android:clickable="false"
                >
            </TextView>

            <TextView
                android:id="@+id/txt_fardos_previstos_568"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fundo3"
                android:gravity="right|center_vertical"
                android:textColor="@color/dark_blue" >

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linha_06_568"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linha_04_568"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:background="@drawable/fundo"
            android:padding="5sp">

            <Spinner
                android:id="@+id/sp_categoria_568"
                android:background="@drawable/fundo"
                android:layout_width="0sp"
                android:layout_weight="0.4"
                android:layout_height="30sp"
                android:textColor="@color/dark_blue"
                android:layout_marginRight="5sp"

                />


            <Spinner
                android:id="@+id/sp_marca_568"
                android:background="@drawable/fundo"
                android:layout_width="0sp"
                android:layout_weight="0.4"
                android:layout_height="30sp"
                android:textColor="@color/dark_blue"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                />

            <Spinner
                android:id="@+id/sp_view_568"
                android:background="@drawable/fundo"
                android:layout_width="0sp"
                android:layout_weight="0.1"
                android:layout_height="30sp"
                android:textColor="@color/dark_blue"
                android:layout_marginLeft="5sp"

                />


        </LinearLayout>

        <ListView
            android:id="@+id/lvprepedido_568"
            android:layout_below="@+id/linha_06_568"
            android:layout_marginTop="5sp"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        </ListView>



    </RelativeLayout>


</RelativeLayout>
