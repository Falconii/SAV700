<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/fundo"
	>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/cabec_401"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5sp"
		android:layout_marginLeft="5sp"
		android:layout_marginRight="5sp"
		android:layout_span="02"
		android:gravity="center_horizontal"
		android:weightSum="16"
		>


		<ImageView
			android:id="@+id/flag_verde_401"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_action_flag_verde"
			android:layout_weight="1"/>

		<TextView
			android:id="@+id/txt_verde_401"
			android:layout_width="0sp"
			android:layout_height="30sp"
			android:text="100,00"
			android:gravity="center_vertical|center_horizontal"
			android:layout_gravity="center"
			android:textSize="14sp"
			android:textColor="@color/black"
			android:layout_weight="3"/>



		<ImageView
			android:id="@+id/flag_amarela_401"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_action_flag_amarela"
			android:layout_weight="1"/>

		<TextView
			android:id="@+id/txt_amarela_401"
			android:layout_width="0sp"
			android:layout_height="30sp"
			android:text="100,00"
			android:gravity="center_vertical|center_horizontal"
			android:layout_gravity="center"
			android:textSize="14sp"
			android:textColor="@color/black"
			android:layout_weight="3"/>

		<ImageView
			android:id="@+id/flag_vermelha_401"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_action_flag_vermelha"
			android:layout_weight="1"/>

		<TextView
			android:id="@+id/txt_vermelha_401"
			android:layout_width="0sp"
			android:layout_height="30sp"
			android:text="100,00"
			android:gravity="center_vertical|center_horizontal"
			android:layout_gravity="center"
			android:textSize="14sp"
			android:textColor="@color/black"
			android:layout_weight="3"/>

		<ImageView
			android:id="@+id/flag_preta_401"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_action_flag_preta"
			android:layout_weight="1"/>

		<TextView
			android:id="@+id/txt_preta_401"
			android:layout_width="0sp"
			android:layout_height="30sp"
			android:text="100,00"
			android:gravity="center_vertical|center_horizontal"
			android:layout_gravity="center"
			android:textSize="14sp"
			android:textColor="#950b0b0b"
			android:layout_weight="3"/>

	</LinearLayout>

	<TextView
		android:id="@+id/txt_mensagem_401"
		android:layout_width="match_parent"
		android:layout_height="30sp"
		android:layout_marginTop="5sp"
		android:layout_marginLeft="5sp"
		android:layout_marginRight="5sp"
		android:layout_alignParentStart="true"
		android:text="100,00"
		android:gravity="center_vertical|center_horizontal"
		android:layout_gravity="center"
		android:textSize="14sp"
		android:textColor="@color/black"
		android:visibility="gone"
		/>

</RelativeLayout>
