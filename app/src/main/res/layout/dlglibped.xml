<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin">
	<LinearLayout
		android:id="@+id/cabUser"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="03dp"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/txt_040_texto1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:fontFamily="Helvetica"
			android:textSize="12sp"
			android:background="@drawable/customtextview"
			android:text="" />

		<TextView
			android:id="@+id/txt_040_texto2"
			android:layout_marginTop="3sp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:fontFamily="Helvetica"
			android:textSize="12sp"
			android:textColor="@color/red"
			android:background="@drawable/customtextview"
			android:text="" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/cab_botoes"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/cabUser"
		android:layout_alignRight="@+id/cabUser"
		android:layout_below="@+id/cabUser"
		android:orientation="horizontal"
		android:paddingTop="4dp" >

		<Button
			android:id="@+id/btn_040_can"
			style="?android:attr/buttonStyleSmall"
			android:layout_marginLeft="0sp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1.80"
			android:padding="10dp"
			android:background="@drawable/custombutton"
			android:fontFamily="Helvetica"
			android:text="Cancela"
			android:textAlignment="center"
			android:textAllCaps="false" />

		<Button
			android:id="@+id/btn_040_ok"
			style="?android:attr/buttonStyleSmall"
			android:layout_marginLeft="10sp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1.80"
			android:background="@drawable/custombutton"
			android:fontFamily="Helvetica"
			android:text="Confirma" />


	</LinearLayout>

</RelativeLayout>           