<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meta_000"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin" >

        <TextView
            android:id="@+id/lblcabec_23"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="left|center_horizontal"
            android:text="MARCOS ZAVANELLI"
            android:textSize="15sp"
            android:textStyle="bold" />
        
        <ImageView
            android:id="@+id/meta_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/lblcabec_23"
            android:adjustViewBounds="true"
            android:paddingBottom="2dip"
            android:paddingTop="2dip"
            android:scaleType="centerInside"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/meta_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/meta_home"
            android:layout_marginRight="21dp"
            android:layout_toLeftOf="@+id/meta_home"
            android:adjustViewBounds="true"
            android:paddingBottom="2dip"
            android:paddingTop="2dip"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

    </RelativeLayout>
    
    <View
        android:id="@+id/firstDivider"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000" >
    </View>
</LinearLayout>