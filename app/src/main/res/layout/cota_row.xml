<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp"
    android:background="@drawable/fundopedido"
    android:id="@+id/txt_view_017"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_produto_017"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="05dp"
            android:layout_marginBottom="05dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="ITEM 001 - JHSDJKHSJKDHJKSHDJKSHJKDHSAJDHJKSAHDJKSA FD "
            android:textColor="@color/black"
            android:textSize="14sp"
            android:background="@drawable/detalheproduto"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="05dp"
        android:layout_marginBottom="05dp"
        >

        <TableLayout
            android:id="@+id/table_017"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            >


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >



                <TextView
                    android:id="@+id/lbl_saldo_017"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="SALDO"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:background="@drawable/titleproduto"

                    />


                <TextView
                    android:id="@+id/lbl_contrato_017"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="CONTRATO"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:background="@drawable/titleproduto"

                    />

                <TextView
                    android:id="@+id/lbl_taxa_017"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="TAXA FIN."
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:background="@drawable/titleproduto"

                    />


                <TextView
                    android:id="@+id/lbl_periodo_017"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="VALIDADE"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:background="@drawable/titleproduto"

                    />


            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >



                <TextView
                    android:id="@+id/txt_saldo_017"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center"
                    android:text=" "
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"
                    android:background="@drawable/detalheproduto"
                    />


                <TextView
                    android:id="@+id/txt_contrato_017"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center"
                    android:text=" "
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"
                    android:background="@drawable/detalheproduto"
                    />

                <TextView
                    android:id="@+id/txt_taxal_017"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center"
                    android:text=" "
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"
                    android:background="@drawable/detalheproduto"
                    />

                <TextView
                    android:id="@+id/txt_validade_017"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:gravity="center_horizontal|center_vertical"
                    android:text=" "
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"
                    android:background="@drawable/detalheproduto"

                    />



            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/lbl_preco_017"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center"
                    android:text="Preço"
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"
                    android:background="@drawable/detalheproduto"
                    />


                <TextView
                    android:id="@+id/txt_preco_017"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center"
                    android:layout_span="4"
                    android:text=" "
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"
                    android:background="@drawable/detalheproduto"
                    />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/lbl_obs_017"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center"
                    android:text="OBSERVAÇÃO:"
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"
                    android:background="@drawable/detalheproduto"
                    />


                <TextView
                    android:id="@+id/txt_obs_017"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:layout_span="4"
                    android:text=" "
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"
                    android:background="@drawable/detalheproduto"
                    />



            </TableRow>

        </TableLayout>

    </RelativeLayout>

</LinearLayout>