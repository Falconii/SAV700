<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fundo"
    >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/im_agenda"
        android:src="@drawable/calendar_30"
        />

    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/im_agenda"
        android:orientation="vertical" >




        <TableLayout
            android:id="@+id/table_402"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/txt_id_402"
                    android:layout_width="fill_parent"
                    android:layout_height="35sp"
                    android:gravity="left|center_vertical"
                    android:text="18/NOV"
                    android:textColor="@color/dark_blue"
                    android:textSize="14sp"

                    />

                <TextView
                    android:id="@+id/txt_data_402"
                    android:layout_width="fill_parent"
                    android:layout_height="35sp"
                    android:gravity="left|center_vertical"
                    android:text="18/NOV"
                    android:textColor="@color/dark_blue"
                    android:textSize="14sp"

                    />

                <TextView
                    android:id="@+id/txt_hora_402"
                    android:layout_width="fill_parent"
                    android:layout_height="35sp"
                    android:gravity="left|center_vertical"
                    android:text="Hora: 12:00"
                    android:textColor="@color/dark_blue"
                    android:textSize="14sp"

                    />

                <TextView
                    android:id="@+id/txt_tipo_402"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="left|center_vertical"
                    android:text="Tipo Avulso:"
                    android:textColor="@color/dark_blue"
                    android:textSize="14sp"

                    />
                <TextView
                    android:id="@+id/txt_situacao_402"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:gravity="left|center_vertical"
                    android:text="Situacao:"
                    android:textColor="@color/dark_blue"
                    android:textSize="14sp"

                    />


            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="30sp" >

                <TextView
                    android:id="@+id/txt_cliente_402"
                    android:layout_span="5"
                    android:layout_width="fill_parent"
                    android:layout_height="36sp"
                    android:gravity="left|center_vertical"
                    android:text="PEDIDO: KJKJDKFJKDJFKD"
                    android:textColor="@color/black"
                    />

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="30sp" >

                <TextView
                    android:id="@+id/txt_pedido_402"
                    android:layout_span="1"
                    android:layout_width="fill_parent"
                    android:layout_height="36sp"
                    android:gravity="left|center_vertical"
                    android:text="PEDIDO: KJKJDKFJKDJFKD"
                    android:textColor="@color/black"
                    />


                <TextView
                    android:id="@+id/txt_motivo_402"
                    android:layout_span="4"
                    android:layout_width="fill_parent"
                    android:layout_height="36sp"
                    android:gravity="left|center_vertical"
                    android:text="MOTIVO: KJKJDKFJKDJFKD"
                    android:textColor="@color/black"
                    />
            </TableRow>



            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_obs_402"
                    android:layout_span="5"
                    android:layout_width="fill_parent"
                    android:layout_height="35sp"
                    android:gravity="left|center_vertical"
                    android:text="000.000 DESCRICAO DA REDE !!!!"
                    android:textColor="@color/orange"
                    android:textSize="14sp"
                    />
            </TableRow>




        </TableLayout>


    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_alteracao_402"
        android:src="@drawable/pen_30"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
