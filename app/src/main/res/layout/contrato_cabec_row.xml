<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pedidomb_cabec_row"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="16sp"
    android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    android:background="@drawable/fundopedido"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="05dp"
        android:layout_marginBottom="05dp"
        >

        <TextView
            android:id="@+id/lbl_titulo_008"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="CONTRATO" />

        <ImageView
            android:id="@+id/item_trash_008"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="97dp"
            android:background="@color/white"
            android:src="@drawable/trash_24"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/item_max_min_008"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:src="@drawable/maximize_24_azul"
            android:visibility="invisible"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="05dp"
        android:layout_marginBottom="05dp"
        >

        <LinearLayout
            android:id="@+id/linha_01_008"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- id -->
            <TextView
                android:id="@+id/lbl_nro_008"
                android:layout_width="80sp"
                android:layout_height="30sp"
                android:gravity="center"
                android:text="NÂº"
                android:textColor="@color/green"
                android:background="@drawable/fundo"
                >
            </TextView>

            <TextView
                android:id="@+id/txt_nro_008"
                android:layout_width="86dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="889988"
                android:textColor="@color/dark_blue"
                android:background="@drawable/fundo3" >
            </TextView>

            <!-- Codigo -->
            <TextView
                android:id="@+id/lbl_data_008"
                android:layout_marginLeft="10sp"
                android:layout_width="80sp"
                android:layout_height="30sp"
                android:gravity="center"
                android:text="Data"
                android:textColor="@color/green"
                android:background="@drawable/fundo"
                >
            </TextView>

            <TextView
                android:id="@+id/txt_data_008"
                android:layout_width="101dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="27/12/1964"
                android:textColor="@color/dark_blue"
                android:background="@drawable/fundo3" >
            </TextView>

            <!-- status  -->
            <TextView
                android:id="@+id/lbl_status_008"
                android:layout_marginLeft="10sp"
                android:layout_width="80sp"
                android:layout_height="30sp"
                android:gravity="center"
                android:textColor="@color/green"
                android:text="Status"
                android:background="@drawable/fundo"
                >
            </TextView>

            <TextView
                android:id="@+id/txt_status_008"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="APROVADO !!!"
                android:textColor="@color/dark_blue"
                android:background="@drawable/fundo3"
                >
            </TextView>

            <!-- categoria  -->
            <TextView
                android:id="@+id/lbl_tipo_008"
                android:layout_marginLeft="10sp"
                android:layout_width="80sp"
                android:layout_height="30sp"
                android:gravity="center"
                android:textColor="@color/green"
                android:text="TIPO"
                android:background="@drawable/fundo"
                >
            </TextView>

            <TextView
                android:id="@+id/txt_tipo_008"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="CIA"
                android:textColor="@color/dark_blue"
                android:background="@drawable/fundo3"
                >
            </TextView>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linha_02_008"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linha_01_008"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <!-- mensagem do erro  -->
            <TextView
                android:id="@+id/lbl_rede_008"
                android:layout_width="80sp"
                android:layout_height="30sp"
                android:gravity="center"
                android:text="REDE"
                android:textColor="@color/green"
                android:background="@drawable/fundo"
                android:clickable="false"
                >
            </TextView>

            <TextView
                android:id="@+id/txt_rede_008"
                android:layout_width="fill_parent"
                android:layout_height="30sp"
                android:gravity="center"
                android:text="999999-kjsdkjsdkjskdjksjdksjdks"
                android:textColor="@color/dark_blue"
                android:background="@drawable/fundo3"
                >
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linha_03_008"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linha_02_008"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <!-- CLIENTE  -->
            <TextView
                android:id="@+id/lbl_cliente_008"
                android:layout_width="80sp"
                android:layout_height="30sp"
                android:gravity="center"
                android:text="Cliente"
                android:textColor="@color/green"
                android:background="@drawable/fundo"
                >
            </TextView>

            <TextView
                android:id="@+id/txt_cliente_008"
                android:layout_width="fill_parent"
                android:layout_height="30sp"
                android:gravity="center"
                android:text="PEDIDO OK"
                android:textColor="@color/dark_blue"
                android:background="@drawable/fundo3"
                >
            </TextView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linha_04_008"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linha_03_008"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            >

            <!-- cnpj  -->
            <TextView
                android:id="@+id/lbl_desc_fin_loja_008"
                android:layout_width="80sp"
                android:layout_height="30sp"
                android:gravity="center"
                android:text="D. FIN LOJA"
                android:textColor="@color/green"
                android:background="@drawable/fundo"
                android:clickable="false"
                >
            </TextView>

            <TextView
                android:id="@+id/txt_desc_fin_loja_008"
                android:layout_width="274dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="062.210.610/0008-89"
                android:textColor="@color/dark_blue"
                android:background="@drawable/fundo3"
                >
            </TextView>

            <!-- IE -->

            <TextView
                android:id="@+id/lbl_desc_fin_cd_008"
                android:layout_marginLeft="10sp"
                android:layout_width="80sp"
                android:layout_height="30sp"
                android:gravity="center"
                android:text="D. FIN CD"
                android:textColor="@color/green"
                android:background="@drawable/fundo"
                android:clickable="false"
                >
            </TextView>

            <TextView
                android:id="@+id/txt_desc_fin_cd_008"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="244.123.123"
                android:textColor="@color/dark_blue"
                android:background="@drawable/fundo3" >
            </TextView>


        </LinearLayout>



    </RelativeLayout>

</LinearLayout>