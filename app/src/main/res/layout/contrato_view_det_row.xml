<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:layout_marginLeft="5sp"
	android:layout_marginRight="5sp"
	android:layout_marginTop="10sp"
	android:layout_marginBottom="10sp"

	>



	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="10">

		<TextView
			android:id="@+id/txt_descricao_017"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:gravity="left"
			android:text="000000-00-123456789012345678901234567890"
			android:textColor="@color/dark_blue"
			android:textSize="12sp"
			android:background="@drawable/detalheproduto"
			android:layout_weight="6"
			/>

		<TextView
			android:id="@+id/txt_perloja_017"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:gravity="center_vertical|center|center_horizontal"
			android:text="62.901.210/0001-08"
			android:textColor="@color/dark_blue"
			android:textSize="12sp"
			android:background="@drawable/detalheproduto"
			android:layout_weight="2" />


		<TextView
			android:id="@+id/txt_perccd_017"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			android:gravity="center_vertical|center_horizontal"
			android:text="244.244.244.244"
			android:textColor="@color/dark_blue"
			android:textSize="12sp"
			android:background="@drawable/detalheproduto"
			android:layout_weight="2"
			/>




	</LinearLayout>




</LinearLayout>