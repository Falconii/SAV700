<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meta_mensal_05"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
		>

         <TextView
             android:id="@+id/lbl_titulo_04"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center_vertical|center_horizontal"
             android:layout_marginLeft="5dip"
             android:text="TITULO"
             android:textSize="14sp"
             android:textStyle="bold" />


    </RelativeLayout>


    <TableLayout
        android:id="@+id/tablemetas_04"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="05dp"
        android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff"
        >

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width= "match_parent"
                android:layout_weight	="1"
                android:background	= "@drawable/customtextview"
                >

                <TextView
                    android:id				= "@+id/lbl_Meta_04"
                    android:layout_height   ="wrap_content"
                    android:layout_width    ="wrap_content"
                    android:text			= "Meta"
                    android:gravity			= "center"
                    android:textSize        ="12sp"
                    android:textColor="@color/red"/>

                <TextView
                    android:id				= "@+id/txt_Meta2_04"
                    android:layout_height   = "wrap_content"
                    android:layout_width    = "wrap_content"
                    android:layout_below    = "@+id/lbl_Meta_04"
                    android:layout_alignParentEnd="true"
                    android:text			= "1400,00"
                    android:textColor		= "#0000CC"
                    android:gravity			= "right"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width= "match_parent"
                android:layout_weight	="1"
                android:background	= "@drawable/customtextview"
                >

                <TextView
                    android:id				="@+id/lbl_Realizado_04_2"
                    android:text			="Realizado"
                    android:layout_height   = "wrap_content"
                    android:layout_width    = "wrap_content"
                    android:gravity			="center"
                    android:textSize        ="12sp"
                    android:textColor="@color/red"/>

                <TextView
                    android:id				="@+id/txt_Realizado2_04"
                    android:layout_height   = "wrap_content"
                    android:layout_width    = "wrap_content"
                    android:layout_below="@+id/lbl_Realizado_04_2"
                    android:text			="800,00"
                    android:layout_weight	="1"
                    android:textColor		="#0000CC"
                    android:gravity			="right"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width= "match_parent"
                android:layout_weight	="1"
                android:background	= "@drawable/customtextview"
                >
                <TextView
                    android:id				="@+id/lbl_Real_Cart_04"
                    android:layout_height   = "wrap_content"
                    android:layout_width    = "wrap_content"
                    android:text			="Real+Cart"
                    android:gravity			="center"
                    android:textSize="12sp"
                    android:textColor="@color/red"/>

                <TextView
                    android:id				="@+id/txt_Real_Cart_04"
                    android:text			="200,00"
                    android:layout_height   = "wrap_content"
                    android:layout_width    = "wrap_content"
                    android:layout_below="@+id/lbl_Real_Cart_04"
                    android:textColor		="#0000CC"
                    android:gravity			="right"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width= "match_parent"
                android:layout_weight	="1"
                android:background	= "@drawable/customtextview">
                <TextView
                    android:id				= "@+id/lbl_perc_04"
                    android:text			= "% Real"
                    android:layout_height   = "wrap_content"
                    android:layout_width    = "wrap_content"
                    android:gravity			= "center"
                    android:textSize        = "12sp"
                    android:textColor       = "@color/red"/>

                <TextView
                    android:id				= "@+id/txt_perc2_04"
                    android:text			= "90%"
                    android:layout_height   = "wrap_content"
                    android:layout_width    = "wrap_content"
                    android:layout_below    = "@+id/lbl_perc_04"
                    android:textColor		= "#0000CC"
                    android:gravity			= "center"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>



        </TableRow>


    </TableLayout>



</LinearLayout>